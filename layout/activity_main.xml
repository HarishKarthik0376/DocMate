<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primary_dark">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME,"
        android:textColor="@color/signupred"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:id="@+id/welcome"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:id="@+id/nametodisplay"
        android:layout_below="@id/welcome"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_account_circle_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/profileicon"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="130dp"
       android:layout_alignEnd="@id/profileicon"
    android:layout_alignStart="@id/nametodisplay"
        android:layout_below="@id/profileicon"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        app:strokeColor="@color/signupred"
        app:cardElevation="12dp"
        app:rippleColor="#F87070"
        android:id="@+id/healthttrack"
        app:strokeWidth="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/newgroup"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEALTH TRACKING"
            android:textColor="@color/signupred"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />
    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/healthttrack"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:id="@+id/secondlinear"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/signupred"
            app:strokeWidth="2dp"
            android:id="@+id/stepscard"
            app:strokeColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:cardElevation="12dp"
            android:layout_marginStart="10dp"
            app:rippleColor="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/newrunning"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/signupred"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:id="@+id/remindersection"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            app:cardElevation="12dp"
            android:layout_gravity="right"
            app:rippleColor="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/clock"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminders"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondlinear"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_weight="1">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/signupred"
            app:strokeWidth="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:strokeColor="@color/white"
            app:cardElevation="12dp"
            android:layout_marginStart="10dp"
            android:id="@+id/doctorcardview"
            app:rippleColor="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:id="@+id/imageviewdoctor"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="25sp"
                android:id="@+id/contactdoctor"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/signupred"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:id="@+id/chatbot"
            app:cardElevation="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:rippleColor="@color/white">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/robotic"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatbot"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>





</RelativeLayout>