<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0C0D0D">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:id="@+id/historycontent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/black"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/typetextview"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="-3dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="@color/signupred"
                android:id="@+id/remndertype"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="left|bottom"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:id="@+id/remindersettime"/>

        <ImageView
            android:id="@+id/deletereminder"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/baseline_delete_24" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newline"
            android:rotation="90"
            android:layout_gravity="right"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="35dp"/>
        <ImageView
            android:id="@+id/options"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="9dp"
            android:src="@drawable/pencil" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginEnd="30dp"
            android:id="@+id/switchbtn"
            android:checked="false"
            app:thumbTint="@color/red"
            app:trackTint="@color/white"/>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>