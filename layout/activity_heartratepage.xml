<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bmi"
    android:id="@+id/main"
    android:background="#0C0D0D"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Heart Rate"
            android:textColor="@color/signupred"
            android:textSize="21sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:id="@+id/gobackheartrate"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-7dp"
            android:id="@+id/heartratechart"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/baseline_bar_chart_24" />
        <ImageView
            android:id="@+id/hearthis"
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/heartratechart"
            android:src="@drawable/history" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228dp">

        <ImageView
            android:id="@+id/hearticon"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/heart" />


        <TextView
            android:id="@+id/heartrate"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignBottom="@+id/hearticon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="-53dp"
            android:text="Heart Rate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heratratetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/heartrate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-34dp"
            android:paddingTop="5dp"
            android:text="Normal"
            android:textAlignment="center"
            android:textColor="#5ADB08"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Maleheart"
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/male"
                app:backgroundTint="@color/signupred" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:rotation="90"
                android:src="@drawable/newline" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:background="@drawable/girl"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:id="@+id/Femaleheart"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@color/signupred"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/materialCardView"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="20sp"
                android:textColor="@color/signupred"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/heartage"
                android:inputType="number"
                android:backgroundTint="@color/white"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_add_24"
                android:layout_gravity="center|right"
                android:id="@+id/heartageplus"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/newminus"
                android:layout_gravity="center|left"
                android:id="@+id/heartageminus"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"/>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="7dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:id="@+id/numberrecyclerview"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/signupred"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_arrow_drop_up_24"
                android:layout_gravity="center|bottom"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/newline"
                android:rotation="90"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/newline"
                android:rotation="90"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"/>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="7dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/signupred"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Walking">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Walking"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Running">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Running"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Swimming">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Swimming"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Resting">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resting"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Standing">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Standing"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="#0C0D0D"
                        app:strokeColor="@color/white"
                        app:strokeWidth="2dp"
                        android:id="@+id/Sleeping">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleeping"
                            android:layout_gravity="center"
                            android:textColor="@color/signupred"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Heart Rate"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/black"
        android:textStyle="bold"
        android:textColor="@color/signupred"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:id="@+id/calculatehaertratebtn"
        app:rippleColor="@color/white"
        />


</LinearLayout>