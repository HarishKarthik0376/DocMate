<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".bmi"
    android:background="#0C0D0D"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="BMI"
            android:textColor="@color/signupred"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gobackbmi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/baseline_arrow_back_24" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/history"
            android:backgroundTint="@color/signupred"
            android:id="@+id/bmihistory"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/chart" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-7dp"
            android:id="@+id/chart"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/baseline_bar_chart_24" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <ImageView
            android:id="@+id/bmiimg"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/bmiapp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="216dp"
            android:layout_height="105dp"
            android:layout_alignTop="@+id/bmiimg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="103dp"
            android:src="@drawable/needle" />

        <TextView
            android:id="@+id/bmivalue"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignBottom="@+id/bmiimg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="-59dp"
            android:text="BMI"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bmitext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bmivalue"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-37dp"
            android:paddingTop="5dp"
            android:text="Healthy Weight"
            android:textAlignment="center"
           android:textColor="#5ADB08"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Male"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/male"
                app:backgroundTint="@color/signupred" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:rotation="90"
                android:src="@drawable/newline" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Female"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/girl"
                app:backgroundTint="@color/signupred" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/materialCardView"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Age"
                android:textColor="@color/signupred"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ageedttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:inputType="number"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/ageplus"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baseline_add_24" />

            <ImageView
                android:id="@+id/ageminus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/newminus" />

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/height"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Weight"
                android:textColor="@color/signupred"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weightedttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                android:text="70.0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/weightplus"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baseline_add_24" />

            <ImageView
                android:id="@+id/weightminus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="17dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/newminus" />

            <TextView
                android:id="@+id/weightunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="11dp"
                android:text="Kg"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/height"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="11dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/signupred"
            app:strokeWidth="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Height"
                android:textColor="@color/signupred"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/heightunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="11dp"
                android:text="Cm"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/heightedttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/white"
                android:ems="3"
                android:inputType="numberDecimal"
                android:text="160.0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/heightinches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:backgroundTint="@color/white"
                android:ems="3"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/signupred"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/incheplus"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baseline_add_24"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/heightminus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/newminus" />

            <ImageView
                android:id="@+id/heightplus"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baseline_add_24" />

            <ImageView
                android:id="@+id/inchesminus"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|left"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/newminus"
                android:visibility="invisible" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        app:cornerRadius="10dp"
        app:backgroundTint="@color/black"
        android:textStyle="bold"
        android:textColor="@color/signupred"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/calculatebmibtn"
        app:rippleColor="@color/white" />


</LinearLayout>