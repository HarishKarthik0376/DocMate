<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".stepcounter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step Counter"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textFontWeight="800"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/gotohomepage"
        android:layout_marginStart="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:layout_width="300dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressbar"
            android:background="@drawable/ciruclarshape"
            android:progressDrawable="@drawable/rotate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Steps"
            android:textSize="30sp"
            android:textColor="@color/signupred"
            android:id="@+id/textcontent"/>

        <TextView
            android:id="@+id/stepscontent"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_below="@+id/textcontent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="166dp"
            android:textColor="@color/white"
            android:text="Total Steps"
            android:textSize="25sp" />

    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/signupred"
        android:text="Start"
        android:textSize="20sp"
        android:id="@+id/startcounter"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/signupred"
        android:textColor="@color/white"
        android:text="Reset"
        android:textSize="20sp"
        android:id="@+id/resetcounter"/>

</RelativeLayout>