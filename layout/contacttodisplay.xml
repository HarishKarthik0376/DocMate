<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="330dp"
        android:layout_height="140dp"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/signupred"
        app:strokeWidth="2dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/contactoverlay"
        android:layout_marginTop="10dp"
        app:cardElevation="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harish Karthik"
        android:textSize="30sp"
        android:id="@+id/nametobeupdated"
        android:textColor="@color/signupred"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role:Doctor"
            android:textSize="30sp"
            android:id="@+id/roletobeupdate"
            android:textColor="@color/signupred"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id:Doc660c"
                android:textSize="30sp"
                android:id="@+id/idtobeupdated"
                android:textColor="@color/signupred"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_delete_24"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:id="@+id/deletechat"
            />
      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/comment"
          android:layout_gravity="right|center_vertical"
          android:layout_marginEnd="20dp"
          android:id="@+id/startmessaging"
          />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>