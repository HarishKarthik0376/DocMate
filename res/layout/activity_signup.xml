<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@color/primary_dark">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:text="Hey There,"
        android:textColor="@color/signupred"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="SignUp To Proceed"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-13dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="First Name"
                android:textColor="@color/signupred"
                android:textFontWeight="1700"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signupfname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/cornerradius"
                android:ems="13"
                android:hint="Enter First Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/signupred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textFontWeight="1700"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signuplname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/cornerradius"
                android:ems="13"
                android:hint="Enter Last Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/signupred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Email Id"
                android:textColor="@color/signupred"
                android:textFontWeight="1700"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/signupemail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="31dp"
                android:background="@drawable/cornerradius"
                android:ems="13"
                android:hint="Enter Email Id"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/signupred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Mobile"
                android:textColor="@color/white"
                android:textFontWeight="1700"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/signupnumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="43dp"
                android:background="@drawable/cornerradius"
                android:ems="13"
                android:hint="Enter Mobile Number"
                android:inputType="number|phone"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/signupred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textColor="@color/signupred"
                android:textFontWeight="1700"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/signuppass"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="11dp"
                android:background="@drawable/cornerradius"
                android:ems="13"
                android:inputType="textPassword"
                android:hint="Enter Password Min 6 Char"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/signupred" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Choose Role"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/white"
                    android:text="User"
                    android:textColor="@color/signupred"
                    android:textSize="17sp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/signupred"
                    app:strokeColor="@color/signupred"
                    android:id="@+id/userbtn"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:text="Doctor"
                    android:textColor="@color/signupred"
                    android:textSize="17sp"
                    app:cornerRadius="10dp"
                    app:rippleColor="@color/signupred"
                    app:strokeColor="@color/signupred"
                    android:id="@+id/doctorbtn"
                    app:strokeWidth="1dp" />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signupbtn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/signupred"
            android:text="SignUp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/alreadyhaveanaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Already Have An Account?"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>